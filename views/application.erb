<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <!-- Latest compiled and minified JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>  <script src="//code.jquery.com/jquery-1.12.0.min.js"></script>
    <script type="text/javascript" src="https://jstest.authorize.net/v1/Accept.js" charset="utf-8"></script>
  </head>

  <body>
    <div class="container">
      <% if @errors %>
        <div class="bg-danger"><%= @errors %></div>
      <% end %>

      <% if @successes %>
        <div class="bg-success"><%= @message %></div>
      <% end %>
      
      <div class="bg-primary">
        <div id="transaction-result"></div>
        <div id="card-info"></div>
      </div>

      <div class="bg-danger">
        <div id="transaction-error"></div>
      </div>

      <%= yield %>
    </div>
  </body>
</html>
